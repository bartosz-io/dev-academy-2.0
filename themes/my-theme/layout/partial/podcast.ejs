<div class="article-wrapper">
    <article class="article" itemscope itemprop="blogPost" itemtype="http://schema.org/BlogPosting">
        <header class="podcast-header">
            <div class="container">
                <h1 itemprop="headline" class="border border-light border-small"><%- page.title %></h1>
                <link itemprop="url" href="<%- page.permalink %>">
                <div class="podcast-details">
                    <div class="podcast-speakers">
                        <div class="podcast-guest" itemprop="author" itemscope itemtype="https://schema.org/Person">
                            <img src="guest.png" class="article-avatar" itemprop="image" alt="<%- post.contributor %>">
                            <div class="podcast-guest-info">
                                <div class="podcast-guest-name"><span itemprop="name"><%- post.guest %></span></div>
                                <div class="podcast-guest-bio"><%- post.guestBio %></div>
                            </div>
                        </div>
                        <div class="podcast-host" itemprop="author" itemscope itemtype="https://schema.org/Person">
                            <img src="/img/bartosz-pietrucha.png" class="article-avatar" itemprop="image" alt="<%- post.contributor %>">
                            <div class="podcast-guest-info">
                                <div class="podcast-guest-name"><span itemprop="name">Bartosz Pietrucha</span></div>
                                <div class="podcast-guest-bio">Dev Academy founder</div>
                            </div>
                        </div>
                    </div>
                    <div class="article-meta">
                        <%- partial('partial/post/tags') %>
                        <div class="article-date">
                            <% if (post.dateModified) {%>
                                <span>Updated</span>
                                <time datetime="<%= date_xml(post.dateModified) %>" itemprop="dateModified"><%= date(post.dateModified, null) %></time>
                            <% } else { %>
                                <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, null) %></time>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="article-content-wrapper">
            <div class="container article-content-container">
                <aside class="article-toc" id="article-toc">
                </aside>

                <div class="article-content" itemprop="description">
                    <div class="embeds">
                        <div class="video-responsive" style="position: relative; padding-bottom: 56.25%; height: 0; margin-bottom: 2rem;">
                            <iframe style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;" src="https://www.youtube.com/embed/<%- post.youtubeID %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                        <iframe style="width: 100%;" allow="autoplay *; encrypted-media *; fullscreen *; clipboard-write" frameborder="0" height="190" style="width:100%;max-width:660px;overflow:hidden;border-radius:10px;" sandbox="allow-forms allow-popups allow-same-origin allow-scripts allow-storage-access-by-user-activation allow-top-navigation-by-user-activation" src="https://embed.podcasts.apple.com/us/podcast/<%- post.appleID %>"></iframe>
                        <iframe style="border-radius:12px; width: 100%" src="https://open.spotify.com/embed/episode/<%- post.spotifyID %>?theme=0" width="496" height="279" frameBorder="0" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
                    </div>

                    <%- page.content %>
                </div>
                <% if (config.banners.article_side_banner) {%>
                    <%- partial('banners/banner_article_sidebar', {post: post}) %>
                <% } %>
            </div>
        </div>

        <div class="article-footer-wrapper">
            <div class="container">
                <%- partial('post/share') %>
                <%- partial('post/disqus') %>
            </div>
        </div>
    </article>

</div>
